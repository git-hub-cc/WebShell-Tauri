<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.claims" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
  </style>

  <!--
  ================================================================
  |           ✅ MODIFICATION START: Add Non-Immersive Theme          |
  ================================================================
  -->
  <!-- This is the dark version of the new, non-immersive theme. -->
  <style name="Theme.claims.NoEdgeToEdge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Define a solid color for the status bar in dark mode. -->
    <item name="android:statusBarColor">@android:color/black</item>
    <!-- Ensure status bar icons are light on a dark background (this is the default, but explicit is better). -->
    <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
  </style>
  <!--
  ================================================================
  |           ✅ MODIFICATION END                                   |
  ================================================================
  -->
</resources>